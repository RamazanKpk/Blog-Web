@model IEnumerable<DataModel.CategoryModels.CategoryListModel>
<div class="container">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Article")">Home</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="nav navbar-nav ml-auto">

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" href="@Url.Action("Category", "Article", new {category = item.Name})">@item.Name</a>
                               
                            </li>
                        }
                    }
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("login", "Login")">
                            Login
                        </a>
                    </li>
                    @if (ViewBag.IsAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" href="@Url.Action("Index", "Home", new { area = "Admin" })">
                                Admin Panel
                            </a>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle text-light" id="navbarDropdown"
                           data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @ViewBag.User<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu bg-dark">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="@Url.Action("logout", "Login")">Log Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>